			</div>
		</aside>
		{{!------------------- END OF ASIDE ------------------}}

		{{!------------------- MAIN CONTENT -------------------}}
		<main>
			<h1>Anggota</h1>
			
			<div class="card-form">
				<h2>Tambah Anggota</h2>
				<div class="form">
					<form action="/save/anggota" method="post">
						<div class="form-control">
							<label for="nama">Nama lengkap</label>
							<input type="text" name="nama_anggota" id="nama_anggota" placeholder="Nama lengkap calon anggota">
						</div>
						<div class="form-control">
							<label for="telepon">No Telepon</label>
							<input type="number" name="telepon_anggota" id="telepon_anggota" placeholder="No telepon calon anggota">
						</div>
						<div class="form-control">
							<label for="alamat">Alamat</label>
							<input type="text" name="alamat_anggota" id="alamat_anggota" placeholder="Alamat calon anggota">
						</div>
						<div class="submit">
							<button type="submit">Tambah</button>
						</div>
					</form>
				</div>
			</div>

			<div class="recent-orders">
				<h2>Daftar Anggota</h2>
				<table id="tabel-anggota">
					<thead>
						<tr>
							<th>Nama Anggota</th>
							<th>No Telepon</th>
							<th width="40%">Alamat</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{{#each results}}
						<tr>
							<td>{{ nama }}</td>
							<td>{{ telepon }}</td>
							<td>{{ alamat }}</td>
							<td class="danger delete" data-id_anggota="{{ id }}">Hapus</td>
							<td class="primary edit" data-id_anggota="{{ id }}" data-nama_anggota="{{ nama }}" data-telepon_anggota="{{ telepon }}" data-alamat_anggota="{{ alamat }}">Edit</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
				<a href="#">Show All</a>
			</div>
		</main>
		{{!------------------- END OF MAIN -------------------}}

		<div class="right">
			<div class="top">
				<button id="menu-btn">
					<span class="material-icons-sharp">menu</span>
				</button>
				<div class="theme-toggler">
					<span class="material-icons-sharp active">light_mode</span>
